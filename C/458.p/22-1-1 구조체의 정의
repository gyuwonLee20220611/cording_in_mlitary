#include <stdio.h>

typedef struct employee{
    char name[10];
    char PerID[20];
    char money[40];
}Employee;

int main (){
    Employee man;
    
    printf("종업원의 이름을 입력해주세요: ");
    scanf("%s", man.name);
    
    printf("종업원의 주민등록번호를 입력해주세요: ");
    scanf("%s", man.PerID);
    
    printf("종업원의 급여정보를 입력해주세요: ");
    scanf("%s", man.money);
    
    printf("종업원의 이름: %s\n", man.name);
    printf("종업원의 주민등록번호: %s\n", man.PerID);
    printf("종업원의 급여정보: %s", man.money);
}
